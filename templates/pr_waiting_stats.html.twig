{% extends 'base.html.twig' %}

{% block page_header %}
  <div class="page-header">
    <img src="/img/fruitpassion.png" width="50px" height="50px" class="sticker-image"/>
    <h1>Waiting pull request statistics</h1>
  </div>
{% endblock %}

{% block page_content %}

  <div>
    <h2>Last thirty days</h2>
  </div>
  <table class="table">
    <thead>
    <tr>
      <th scope="col">#</th>
      {% for key, type in prTypes %}
        <th scope="col">
          <a href="{{ prUrls[key] }}">{{ type }}</a>
        </th>
      {% endfor %}
    </tr>
    </thead>
    <tbody>
    {% for day, data in stats %}
      <tr>
        <th scope="row">
          {{ day }}
        </th>
        {% for total in data %}
          <td>
            {{ total }}
          </td>
        {% endfor %}
      </tr>
    {% endfor %}
    </tbody>
  </table>

{% endblock %}
